pipeline {
  agent {
    node { label 'workstation' }
  }

    stages {
        stage('one') {
            steps {
                sh 'echo one'
                mail bcc: '', body: 'Hello', cc: 'admin@gmail.com', from: '', replyTo: '', subject: 'Hello', to: 'manasa@gmail.com'
            }
        }
        stage('two'){
            steps {
                sh 'echo two'

            }
        }

    }
    post {
       always {
         echo 'sending Email'
         mail bcc: '', body: 'Hello', cc: 'admin@gmail.com', from: '', replyTo: '', subject: 'Hello', to: 'manasa@gmail.com'
       }

    }
}