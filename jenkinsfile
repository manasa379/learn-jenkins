pipeline {
    agent any
        node { label 'workstation' }
         }


    stages {
        stage('one') {
            steps {
                sh 'echo one'
                mail bcc: '', body: 'Hello', cc: 'divya@gmail.com', from: '', replyTo: '', subject: 'hello', to: 'manasa@gmail.com'
            }
        }
        stage('two'){
            steps {
                sh 'echo two'

            }
        }

    }
    post {
       always {
         echo 'sending Email'
         mail bcc: '', body: 'Hello', cc: 'divya@gmail.com', from: '', replyTo: '', subject: 'hello', to: 'manasa@gmail.com'
       }
    }

}